# ==========================
# Putus Production .htaccess
# React + Vite Single Page App
# ==========================

# Use UTF-8 encoding
AddDefaultCharset UTF-8

# Enable URL rewriting
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Allow direct access to files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect all other routes to index.html
  RewriteRule ^ index.html [L]
</IfModule>

# ==========================
# Security & performance rules
# ==========================

# Prevent directory listing
Options -Indexes

# Cache static assets (images, CSS, JS)
<FilesMatch "\.(ico|jpg|jpeg|png|gif|js|css|svg|woff|woff2|ttf|eot|otf|ts|tsx)$">
  Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# Handle 404 errors gracefully (optional)
ErrorDocument 404 /index.html

# ==========================
# END OF FILE
# ==========================
